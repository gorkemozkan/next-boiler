# Local Development Overrides
# Copy this file to .env.local and customize for your local environment

# Database Configuration (Local Development)
DATABASE_URL="postgresql://postgres:password@localhost:5432/next_boiler_dev"
DATABASE_HOST="localhost"
DATABASE_PORT="5432"
DATABASE_NAME="next_boiler_dev"
DATABASE_USER="postgres"
DATABASE_PASSWORD="password"

# JWT Configuration (Local Development)
JWT_SECRET="dev-jwt-secret-key-change-in-production"
JWT_REFRESH_SECRET="dev-jwt-refresh-secret-key-change-in-production"
JWT_EXPIRES_IN="1h"
JWT_REFRESH_EXPIRES_IN="30d"
JWT_ISSUER="next-boiler-dev"
JWT_AUDIENCE="developers"

# Application Configuration (Local Development)
APP_URL="http://localhost:3000"
NODE_ENV="development"
PORT="3000"
HOSTNAME="localhost"

# Security & Authentication (Local Development)
COOKIE_SECRET="dev-cookie-secret-change-in-production"
CORS_ORIGIN="http://localhost:3000"

# External Services (Local Development)
REDIS_URL="redis://localhost:6379"
SMTP_HOST="localhost"
SMTP_PORT="1025"
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="dev@localhost"

# API Keys (Local Development - Use test keys)
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Monitoring & Analytics (Local Development)
SENTRY_DSN=""
ANALYTICS_ID=""

# Development Tools
DEBUG="*"
LOG_LEVEL="debug"
ENABLE_SWAGGER="true"
ENABLE_GRAPHIQL="true" 