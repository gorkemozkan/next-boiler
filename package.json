{
  "name": "next-boiler",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:reset": "drizzle-kit drop && drizzle-kit push",
    "prepare": "husky",
    "sentry:sourcemaps": "sentry-cli releases files $(node -p \"require('./package.json').version\") upload-sourcemaps .next --url-prefix '~/_next'",
    "sentry:create-release": "sentry-cli releases new $(node -p \"require('./package.json').version\")",
    "sentry:finalize-release": "sentry-cli releases finalize $(node -p \"require('./package.json').version\")"
  },
  "dependencies": {
    "@next/third-parties": "^15.4.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@sentry/nextjs": "^10.3.0",
    "@tanstack/react-query": "5.84.2",
    "bcryptjs": "3.0.2",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "dotenv": "17.2.1",
    "drizzle-orm": "0.44.4",
    "jsonwebtoken": "9.0.2",
    "lucide-react": "0.539.0",
    "next": "^15.4.6",
    "pg": "8.16.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "3.3.1",
    "zod": "4.0.13"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.4",
    "@tailwindcss/postcss": "4",
    "@types/jsonwebtoken": "9.0.10",
    "@types/node": "20",
    "@types/pg": "8.15.5",
    "@types/react": "19",
    "@types/react-dom": "19",
    "drizzle-kit": "0.31.4",
    "husky": "9.1.7",
    "tailwindcss": "4",
    "tsx": "4.20.3",
    "tw-animate-css": "1.3.6",
    "typescript": "5"
  },
  "overrides": {
    "esbuild": "^0.25.8"
  }
}
